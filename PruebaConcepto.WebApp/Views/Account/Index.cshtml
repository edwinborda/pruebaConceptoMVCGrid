@model PruebaConcepto.WebApp.Models.LoginViewModel
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron login">
    @using (Html.BeginForm("Index", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary()
        <div class="form-group">
            <div class="col-lg-12">
                <label>Usuario</label>
            </div>
            <div class="col-lg-12">
                @Html.TextBoxFor(it => it.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-12">
                <label>Password</label>
            </div>
            <div class="col-lg-12">
                @Html.PasswordFor(it => it.Password, new { @class = "form-control" })
            </div>
        </div>
        <button type="submit" class="btn btn-default">Iniciar sesion</button>
    }
</div>


